<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width= "match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck">

  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".LearnActivity">

    <ImageView
        android:id="@+id/learnTitle"
        android:layout_width="386dp"
        android:layout_height="256dp"
        android:src="@drawable/learntitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/learnTitle">

      <TextView
          android:id="@+id/module1"
          android:layout_width="100dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:gravity="center"
          android:text="Module 1:"
          android:textSize="20dp" />

      <Button
          android:id="@+id/gravity"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:text="Gravity"
          android:onClick="onClick" />

      <Button
          android:id="@+id/light"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:text="Light Spectrum"
          android:onClick="onClick" />

      <Button
          android:id="@+id/circuits"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:text="Circuits"
          android:onClick="onClick" />

      <Button
          android:id="@+id/worksheet1"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:text="Work sheets"
          android:onClick="onClick" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1">

      <TextView
          android:id="@+id/module2"
          android:layout_width="100dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:gravity="center"
          android:text="Module 2:"
          android:textSize="20dp" />

      <Button
          android:id="@+id/waterInBody"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:text="Water in our body"
          android:onClick="onClick" />

      <Button
          android:id="@+id/importanceOfWater"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:text="Importance of water"
          android:onClick="onClick" />

      <Button
          android:id="@+id/digestion"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:text="Water and Digestion"
          android:onClick="onClick" />


      <Button
          android:id="@+id/habits"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:text="Drinking Habits"
          android:onClick="onClick" />

      <Button
          android:id="@+id/science"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:text="Scientific Method"
          android:onClick="onClick" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2">

      <TextView
          android:id="@+id/module3"
          android:layout_width="100dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:gravity="center"
          android:text="Module 3:"
          android:textSize="20dp" />

      <Button
          android:id="@+id/contamination"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:text="Water Contamination"
          android:onClick="onClick" />

      <Button
          android:id="@+id/wash"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:text="Wash"
          android:onClick="onClick" />

      <Button
          android:id="@+id/experiments"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="20dp"
          android:text="Experiments"
          android:onClick="onClick" />

    </LinearLayout>
  </RelativeLayout>
</ScrollView>